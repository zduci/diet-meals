.ingredient.row
  .span2
    = f.collection_select :food_id, @foods, :id, :name, {:include_blank => true}, :class => :food_select

  .span1
    = f.select :quantity, options_for_select(SelectOptions::QUANTITIES), {:include_blank => true}, :class => 'number_select'

  .span1
    = f.collection_select :unit_of_measurement_id, @units_of_measurement, :id, :name, {:include_blank => true}, :class => 'unit_of_measurement_select'

  .span1
    %a.btn.remove_ingredient
      %i.icon-minus-sign 
